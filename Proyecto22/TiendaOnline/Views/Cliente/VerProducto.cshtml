@model Carritos
@{
Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5"> 
        @foreach (var item in ViewBag.join)
        {
          <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@item.img" alt="..." /></div>
                <div class="col-md-6">
                    <div class="small mb-1">@ViewBag.catgoria</div>
                    <h1 class="display-5 fw-bolder">@item.nombre</h1>
                    <div class="fs-5 mb-5">
                        <span class="text-black-50">@item.precio</span>
                       
                    </div>
                    <p class="lead">@item.descripcion</p>
                    <div class="d-flex">
                        <form asp-controller="Cliente" asp-action="NewCars">
                            <input type="hidden" asp-for="UsuarioID" value=@ViewBag.id>
                            <input type="hidden" asp-for="ArticuloID" value=@item.id>
                            <input asp-for="Cantidad" class="form-control text-center me-3" id="inputQuantity" type="text" value="1" style="max-width: 3rem" />
                             <div class="container">
                                <button type="submit" class="btn btn-outline-dark flex-shrink-0 container-fluid">Agregar</button>
                            </div>
                        </form>
                        

                    </div>
                </div>
        </div>
        }
        
       
    </div>
</section>

