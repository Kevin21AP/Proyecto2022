@model Carritos
@*
    
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_LayoutCarrito.cshtml";

    int cout = 1;
}
<div class="container pedido-carrito">

    <table class="table">
        <thead>
            <tr>
               
                <th>N°</th>
                <th>Cantidad</th>
                <th>Nombre</th>
                <th>Opciones</th>
                <th>Fecha</th>
                <th></th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.cars != null)
            {
                @foreach (var item in ViewBag.cars)
                {
                    <tr>
                        
                        <td>@cout</td>
                        <td>@item.cantida</td>
                        <td>@item.nombre</td>
                        <td>@item.precio</td>
                        <td>@item.fecha</td>
                        <td><img src="@item.img" class="imgCars" alt="..."></td>
                        <td>
                            @Html.ActionLink("","",new{},new{@class="bi bi-cash-coin text-danger btn"}) 
                            @Html.ActionLink("","DeleteCarrito",new{id=@item.carriroid},new{@class="bi bi-trash3 text-danger btn"})
                        </td>
                    </tr>

                    cout++;
                }
            }
            
        </tbody>
</table>
</div>